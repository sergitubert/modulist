{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "sourceMap": true,
        "incremental": true,
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules",
        "test",
        "dist",
        "**/*spec.ts"
    ],
}